<div class="uk-container uk-padding">
  <h2> Patient Report </h2>

  <div>
    <h4>Report ID: <%= @report.id %></h4>
    <p><b>Patient No: </b><%= @report.patient.id %></p>
    <p><b>Surname:</b> <%= @report.patient.surname %></p>
    <p><b>Other Names:</b> <%= @report.patient.other_names %></p>
    <p><b>Gender:</b> <%= @report.patient.gender %></p>
    <p><b>Obesity:</b> <%= @report.obesity %></p>
    <p><b>Degree:</b> <%= @report.degree %></p>
    <p><b>Recommendation:</b> <%= @report.recommendation %></p>
    <p><b>Prescription:</b> <%= @report.prescription %></p>
  </div>

  <%= link_to "Edit", edit_report_path(@report), class: 'uk-button uk-button-primary' %>
  <%= link_to "Delete", @report, class: 'uk-button uk-button-danger', data: { confirm: "Are you sure"}, method: :delete %>
</div>