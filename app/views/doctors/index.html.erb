<div class="uk-container">
  <div class="uk-text-center uk-margin-large-bottom">
    <h1 class="uk-h1 uk-margin-top">Doctors</h1>
  </div>

  <table class="uk-table uk-table-small uk-table-divider">
    <thead>
      <tr>
        <th class="uk-width-small">Doc NO.</th>
        <th>Name</th>
        <th>Patients</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      
      <% @doctors.each do |doc| %>
        <tr>
          <td><%= doc.id %></td>
          <td><%= doc.name.capitalize %></td>
          <td><%= doc.patients.count %></td>
          <td>
            <%= link_to "Edit", edit_doctor_path(doc), class: 'uk-button uk-button-primary' %>
            <%= link_to "Delete", doc, class: 'uk-button uk-button-danger', data: { confirm: "Are you sure"}, method: :delete %>
          </td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>