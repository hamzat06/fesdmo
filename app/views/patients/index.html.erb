<div class="uk-container">
  <div class="uk-text-center uk-margin-large-bottom">
    <h1 class="uk-h1 uk-margin-top">Patients</h1>
    <%= link_to "New Patient", new_patient_path, class: 'uk-button uk-button-primary' %>
  </div>

  <table class="uk-table uk-table-small uk-table-divider">
    <thead>
      <tr>
        <th class="uk-width-small">Patient NO.</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %></td>
          <td><%= patient.surname %> <%= patient.other_names %></td>
          <td><%= patient.email %></td>
          <td><%= patient.phone_number %></td>
          <td><%= link_to "View More", patient, class: "uk-button uk-button-default" %></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>