<div class="login">
  <div class="uk-container uk-margin-top">
    <h2 class="uk-text-center">Log in</h2>
    <%= form_with(scope: :session, url: login_path, class: 'uk-form-stacked', local: true) do |f| %>
      <div class="uk-margin">
        <%= f.label :name, class: 'uk-form-label' %>
        <div class="uk-form-controls">
          <%= f.text_field :name, class: 'uk-input uk-form-width-large', placeholder: 'Enter name' %>
        </div>
      </div>
      <div>
        <%= f.submit "Log in", class: 'uk-button uk-button-primary uk-input' %>
      </div>
    <% end %>
  </div>
</div>